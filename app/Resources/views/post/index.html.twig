{% extends 'back.html.twig' %}

{% block content %}
    <h3>Liste des Posts</h3>
    <a class="btn btn-primary" href="{{ path('admin_post_new') }}"> Nouveau post</a>
    
        <div class="row">
        {% for post in posts %}

                  <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="thumbnail">
                      <img src="{{ asset('uploads/posts/'~ post.image) }}" width="242" height="200">
                      <div class="caption">
                        <h3>{{ post.title }}</h3>
                        <p>{{ post.description | slice(0,80) }}...</p>
                        <p><a href="{{ path('admin_post_show', { 'id': post.id }) }}" class="btn btn-primary" role="button">AFFICHER</a> 
                        <a href="{{ path('admin_post_edit', { 'id': post.id }) }}" class="btn btn-warning" role="button">EDITER</a></p>
                      </div>
                    </div>
                  </div>
                        
        {% endfor %}
       </div>

    
{% endblock %}
{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=""> Tableau de bord</a></li>
        <li class="breadcrumb-item active"> Liste des Posts</li>
    </ol>
{% endblock %}
