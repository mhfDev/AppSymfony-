{% extends 'back.html.twig' %}

{% block content %}
    <h3> {{post.title}} </h3>
    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
            {{ form_row(edit_form.title, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
            {{ form_row(edit_form.description, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
            {{ form_row(edit_form.slug, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
            {{ form_row(edit_form.text, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
            {{ form_row(edit_form.image, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
            {{ form_row(edit_form.datepublish, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <div class="form-group">
            {{ form_row(edit_form.categories, { 'required':false ,'attr': {'class':'form-control'}}) }}
            </div>
            <input class="btn btn-danger"  type="submit" value="MODIFIER" />
            <a class="btn btn-default" href="{{ path('admin_post_index') }}">RETOUR</a>

        </div>

    </div>

    
       
        
    {{ form_end(edit_form) }}

{% endblock %}
{% block breadcrumb %}
<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href=""> Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href=""> Liste des Posts</a></li>
        <li class="breadcrumb-item active"> {{post.title}}</li>
    </ol>
    
{% endblock %}

